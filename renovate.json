{
  "extends": [
    "config:base",
    "schedule:weekends"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^github.com/seqsense/"
      ],
      "schedule": [
        "at any time"
      ]
    },
    {
      "packagePatterns": [
        "^golang.org/x/"
      ],
      "schedule": [
        "on the first day of the month"
      ]
    },
    {
      "matchPackagePatterns": [
        "^eslint$",
        "^eslint-plugin-react$",
        "^@typescript-eslint/"
      ],
      "groupName": "eslint and plugins"
    }
  ],
  "timezone": "Asia/Tokyo"
}
